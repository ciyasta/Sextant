<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Sextant.Maui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Sextant.Maui"
    xmlns:workloads="clr-namespace:Sextant.Maui.Views.Workloads"
    xmlns:views="clr-namespace:Sextant.Maui.Views"
    FlyoutBehavior="Locked"
    Title="Sextant.Maui">

    <FlyoutItem Title="Welcome"
                Icon="dotnet_bot.png">
        <ShellContent Title="Welcome"
              Icon="dotnet_bot.png"
          ContentTemplate="{DataTemplate views:WelcomePage}" />
    </FlyoutItem>
    <FlyoutItem Title="Workloads">
        <ShellContent Title="Namespaces"
              Icon="dotnet_bot.png"
          ContentTemplate="{DataTemplate workloads:Namespaces}" />
        <ShellContent Title="Pods"
          Icon="dotnet_bot.png"
      ContentTemplate="{DataTemplate workloads:Pods}" />
    </FlyoutItem>
</Shell>
